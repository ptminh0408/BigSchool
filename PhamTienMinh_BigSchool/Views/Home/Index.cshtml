@model IEnumerable<PhamTienMinh_BigSchool.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<div class="course">
    <h1>UPCOMING COURSES</h1>
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
            </div>
        </li>
    }
</div>